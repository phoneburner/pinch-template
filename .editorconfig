# EditorConfig http://EditorConfig.org

# top-most EditorConfig file
root = true

# This applies to all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.http]
end_of_line = crlf

[*.{yml,yaml,json}]
indent_size = 2
max_line_length = unset

[Caddyfile]
indent_style = tab