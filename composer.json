{
  "name": "phoneburner/pinch-template",
  "description": "The Pinch Application Template",
  "license": "MIT",
  "type": "project",
  "require": {
    "php": "^8.4",
    "phoneburner/composer-replacements": "^1.0.0",
    "phoneburner/pinch-framework": "^0.0.23"
  },
  "require-dev": {
    "behat/behat": "^3.23.0",
    "brianium/paratest": "^7.11",
    "eventsauce/test-utilities": "dev-main",
    "league/openapi-psr7-validator": "^0.22.0",
    "phoneburner/coding-standard": "^1.0.0",
    "phoneburner/pinch-phpstan": "^0.0.23",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpunit/phpunit": "^12.2.7",
    "rector/rector": "^2.1.2",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^7.3.1"
  },
  "autoload": {
    "files": [
      "src/bootstrap.php"
    ],
    "psr-4": {
      "App\\": "src/",
      "App\\Migrations\\": "database/migrations/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\Behat\\": "tests/behat/",
      "App\\Tests\\Unit\\": "tests/unit/"
    }
  },
  "extra": {
    "aws/aws-sdk-php": [
      "S3",
      "Sqs"
    ]
  },
  "scripts": {
    "pre-autoload-dump": "Aws\\Script\\Composer\\Composer::removeUnusedServices",
    "behat": "@php vendor/bin/behat",
    "lint": "@php vendor/bin/parallel-lint -j $(nproc --ignore=2) --show-deprecated --exclude vendor --exclude build .",
    "paratest": "@php vendor/bin/paratest",
    "paratest-coverage": "@php vendor/bin/paratest --coverage-html=build/phpunit",
    "phpcbf": "@php vendor/bin/phpcbf --parallel=$(nproc --ignore=2) --report=full",
    "phpcs": "@php vendor/bin/phpcs --parallel=$(nproc --ignore=2) --report=full",
    "phpstan": "@php vendor/bin/phpstan analyze --memory-limit=-1 --verbose",
    "phpunit": "@php vendor/bin/phpunit",
    "phpunit-coverage": "@php vendor/bin/phpunit --coverage-html=build/phpunit",
    "rector": "@php vendor/bin/rector process",
    "rector-dry-run": "@php vendor/bin/rector process --dry-run",
    "test": [
      "@paratest",
      "@behat"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  }
}
